# Uncomment the next line to define a global platform for your project
ENV['SWIFT_VERSION'] = '5'
platform :ios, '14.0'
source 'https://github.com/CocoaPods/Specs.git'
target 'Unity-iPhone' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!
  
  # Particle Auth Service
  pod 'ParticleNetworkBase', '1.3.4'
  pod 'ParticleAuthService', '1.3.4'
  
  # Particle Connect Service
  pod 'ConnectCommon', '0.2.13'
  pod 'ConnectEVMAdapter', '0.2.13'
  pod 'ConnectSolanaAdapter', '0.2.13'
  pod 'ConnectWalletConnectAdapter', '0.2.13'
  pod 'ConnectPhantomAdapter', '0.2.13'
  pod 'ParticleConnect', '0.2.13'
  pod 'ParticleAuthAdapter', '0.2.13'

  # Particle Wallet Service
  pod 'ParticleWalletConnect', '1.3.4'
  pod 'ParticleWalletAPI', '1.3.4'
  pod 'ParticleWalletGUI', '1.3.4'
  
  # Particle AA
  pod 'ParticleAA', '1.3.4'
  
  # Particle Auth Core
  pod 'AuthCoreAdapter', '1.3.0'
  pod 'ParticleAuthCore', '1.3.0'
  pod 'ParticleMPCCore', '1.3.0'
  pod 'Thresh', '1.3.0'
    
  pod 'SkeletonView', :git => 'https://github.com/SunZhiC/SkeletonView.git', :branch => 'main'
  
  target 'Unity-iPhone Tests' do
    inherit! :search_paths
    # Pods for testing
  end

end

target 'UnityFramework' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for UnityFramework

end


post_install do |installer|
  
   installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
    config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
      end
    end
  
  installer.pods_project.build_configurations.each do |config|
    config.build_settings["EXCLUDED_ARCHS[sdk=iphonesimulator*]"] = "x86_64"
    config.build_settings["EXCLUDED_ARCHS[sdk=iphonesimulator*]"] = "arm64"
  end

  installer.generated_projects.each do |project|
    project.targets.each do |target|
        target.build_configurations.each do |config|
            config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
         end
    end
  end
  
  # This is necessary for Xcode 14, because it signs resource bundles by default
  # when building for devices.
  installer.target_installation_results.pod_target_installation_results
  .each do |pod_name, target_installation_result|
    target_installation_result.resource_bundle_targets.each do |resource_bundle_target|
      resource_bundle_target.build_configurations.each do |config|
        config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
      end
    end
  end
  
end
